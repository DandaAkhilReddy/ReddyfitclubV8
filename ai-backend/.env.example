# ReddyFit AI Backend Environment Variables

# Groq API (Fast LLM inference)
GROQ_API_KEY=YOUR_GROQ_API_KEY_HERE

# Pinecone (Vector Database for RAG)
PINECONE_API_KEY=YOUR_PINECONE_API_KEY_HERE
PINECONE_ENVIRONMENT=us-east-1-aws
PINECONE_INDEX_NAME=reddyfit-fitness-knowledge

# OpenAI (for embeddings and vision)
# Sign up at https://platform.openai.com/api-keys
OPENAI_API_KEY=YOUR_OPENAI_API_KEY_HERE

# Server Config
PORT=3001
NODE_ENV=development

# Food Recognition API (optional - we'll use Groq vision instead)
# FOOD_RECOGNITION_API_KEY=optional
